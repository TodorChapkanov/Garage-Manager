@model GarageManager.Areas.User.Controllers.CreateCarViewModel

@{
    ViewData["Title"] = "Create Car";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CreateCarBVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vin" class="control-label"></label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group-sm">
                <label asp-for="AllManufacturers" class="control-label"></label>
                <select asp-for="ManufacturerId" asp-items="@Model.AllManufacturers" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            <div class="form-group-sm ">
                <label asp-for="ModelName" class="control-label"></label>
                <select asp-for="ModelName" asp-items="@(new SelectList(string.Empty))" class="form-control"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="Кilometers" class="control-label"></label>
                <input asp-for="Кilometers" class="form-control" />
                <span asp-validation-for="Кilometers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfManufacture" class="control-label"></label>
                <input asp-for="YearOfManufacture" class="form-control" />
                <span asp-validation-for="YearOfManufacture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineModel" class="control-label"></label>
                <input asp-for="EngineModel" class="form-control" />
                <span asp-validation-for="EngineModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineHorsePower" class="control-label"></label>
                <input asp-for="EngineHorsePower" class="form-control" />
                <span asp-validation-for="EngineHorsePower" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <select asp-for="FuelTypeId" asp-items="Model.FuelType" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Transmission" class="control-label"></label>
                <select asp-for="TransmissionId" asp-items="@Model.Transmission" class="form-control">
                    <option disabled selected>--- SELECT ---</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script type="text/javascript">$(document).ready(function () {
            var items = "<option>-All-</option>";
            $('#ModelName').html(items);
        });</script>

    <script type="text/javascript">
    $(document).ready(function () {
        $('#ManufacturerId').change(function() {
            var url = '@Url.Content("~/")' + "Admin/Cars/AllModels/";
            var ddlSourse = "#ManufacturerId";
            $.getJSON(url, { id: $(ddlSourse).val() }, function (data) {
                var items = "<option>-All-</option>";
                $('#ModelName').empty();
                $.each(data, function (i, vehModel) {
                    items += "<option>" + vehModel.text + "</option>"
                });
                $('#ModelName').html(items);
            });
        });
    });
    </script>
}