@model IEnumerable<GarageManager.Web.Models.ViewModels.ServiceIntervention.CarServiceHistoryViewModel>
@{
    ViewData["Title"] = "ServiceHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Service History</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class=" table-responsive">
                <table class="table table-hover table-bordered  mx-auto ">
                    <thead>
                        <tr class="row mx-auto">
                            <td class="col-sm-3 bg-secondary  text-white">Make</td>
                            <td class="col-sm-3 bg-secondary text-white">Registration Plate</td>
                            <td class="col-sm-2 bg-secondary text-white">Date</td>
                            <td class="col-sm-2 bg-secondary text-white">Price</td>
                            <td class="col-sm-2 text-center bg-secondary text-white">Actions</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var service in Model)
                        {
                            <tr class="row mx-auto ">
                                <td class="col-sm-3">@service.CarMake</td>
                                <td class="col-sm-3">@service.CarRegistrtionPlate</td>
                                <td class="col-sm-2">@service.FinishedOn</td>
                                <td class="col-sm-2">@service.Price.ToString("F2")</td>
                                <th class="col-sm-2 d-flex justify-content-center">
                                    <a asp-action="ServiceDetails" asp-controller="Services" asp-area="Admin" asp-route-id="@service.Id">Details</a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>