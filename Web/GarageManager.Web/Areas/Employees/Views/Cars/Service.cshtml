@model GarageManager.Web.Models.ViewModels.Car.AddCarToServiceViewModel

@{
    ViewData["Title"] = "Add For Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
    
}

<h1 class="text-center">Add For Service</h1>


<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <hr />
        <form asp-action="AddToService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"> </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @await Component.InvokeAsync("Departments", false)
            </div>
            <hr class="mt-4"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
