@model GarageManager.Web.Models.BindingModels.RepairService.RepairCreateBindingModel

@{
    ViewData["Title"] = "AddRepairService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Add Repair Service</h1>


<div class="container-fluid w-75 mx-auto">
    <hr />
    <div>
        <form asp-action="AddRepairService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row w-100 mx-auto">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row w-100 mx-auto justify-content-between">
                <div class="form-group w-45">
                    <label asp-for="Hours" class="control-label"></label>
                    <input asp-for="Hours" class="form-control" />
                    <span asp-validation-for="Hours" class="text-danger"></span>
                </div>
                <div class="form-group w-45">
                    <label asp-for="PricePerHour" class="control-label"></label>
                    <input asp-for="PricePerHour" class="form-control" />
                    <span asp-validation-for="PricePerHour" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group text-center">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
         
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
