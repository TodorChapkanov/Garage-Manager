@model GarageManager.App.Models.ViewModels.Department.CarServicesDetailsViewModel

@{
    ViewData["Title"] = "ServiceDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center">Service Details</h1>

<hr />
<div>
    <div class="container-fluid mx-auto">
        <div class="row mx-auto">
            <div class="col-1"></div>
            <div class="col-sm-3 ml-3">
                <div class="row mx-auto">
                    <ul class="list-group-flush ml-5">
                        <li class="list-group-item">
                            <h6 class="text-bold">Make: @Model.Make</h6>
                        </li>
                        <li class="list-group-item">
                            <h6 class="text-bold">Model: @Model.Model</h6>
                        </li>
                        <li class="list-group-item">
                            <h6 class="text-bold">Registration Plate: @Model.RegisterPlate</h6>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="w-100 h-75 mt-2 ml-lg-5" style="border: 2px solid #DCDCDC;">
                    <h6 class="text-bold">@Model.Description</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid justify-content-center w-75 mx-auto ">
        <table class="table fixed_header table-hovermx-auto table-bordered ">
            <thead>
                <tr class="row mx-auto">
                    <th class="col-sm-6">Name</th>
                    <th class="col-sm-4">Price</th>
                    <th class="col-sm-2 text-center">Details</th>
                </tr>
            </thead>
            <tbody >
                @foreach (var part in Model.Parts)
                {
                    <tr class="row mx-auto bg-info">
                        <td class="col-sm-6">@part.Name</td>
                        <td class="col-sm-4">@part.Price</td>
                        <th class="col-sm-2   d-flex justify-content-around">
                            <a asp-action="Edit" asp-controller="Customers" asp-area="Employee" asp-route-id="@part.Id">Edit</a>
                            <a asp-action="AllCarsById" asp-controller="Cars" asp-area="Employee" asp-route-id="@part.Id">Cars</a>
                        </th>
                    </tr>
                    
                }
                @foreach (var repair in Model.Repairs)
                {
                    if (repair.IsFinished)
                    {
                        <tr class="row mx-auto bg-primary">
                            <td class="col-sm-6">@repair.Description</td>
                            <td class="col-sm-4">@repair.TotalCost</td>
                            <th class="col-sm-2   d-flex justify-content-around">
                                <a asp-action="Edit" asp-controller="Customers" asp-area="Employee" asp-route-id="@repair.Id">Edit</a>
                                <a asp-action="AllCarsById" asp-controller="Cars" asp-area="Employee" asp-route-id="@repair.Id">Cars</a>
                            </th>
                        </tr>

                    }
                    else
                    {
                        <tr class="row mx-auto bg-warning">
                            <td class="col-sm-6">@repair.Description</td>
                            <td class="col-sm-4">@repair.TotalCost</td>
                            <th class="col-sm-2   d-flex justify-content-around">
                                <a asp-action="Edit" asp-controller="Customers" asp-area="Employee" asp-route-id="@repair.Id">Edit</a>
                                <a asp-action="AllCarsById" asp-controller="Cars" asp-area="Employee" asp-route-id="@repair.Id">Cars</a>
                            </th>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
    <div class="mx-auto text-center">
        <a class="btn active btn-light text-center" asp-action="AddPart" asp-controller="Parts" asp-area="Employee" asp-route-id="@Model.Id">Add Part</a>
        <a class="btn active btn-light text-center ml-3" asp-action="AddRepairService" asp-controller="Repairs" asp-area="Employee" asp-route-id="@Model.Id">Add Repair Service</a>
    </div>
</div>

