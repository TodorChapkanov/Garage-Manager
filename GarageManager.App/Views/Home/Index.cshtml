
@if (!User.Identity.IsAuthenticated)
{
    <div class="jumbotron bg-eventures w-75 mx-auto font-weight-bold">
        <h1 class="mx-auto font-weight-bold">Eventures - the best ticket service in the world.</h1>
        <hr class="hr-2 bg-dark" />
        <h4 class="mt-4 mx-auto font-weight-bold "><a href="/Identity/Account/Login">Login</a> to start your work.</h4>
        @if (((bool)TempData["IsAnyEmployee"]) != true)
        {
            <h4 class="mt-4 mx-auto font-weight-bold "><a href="/Identity/Account/Register"> Register</a></h4>
            <h4>If you see the register hyperlink, is mean that no users are registered yet and you will be registered like Admin in Garage Manager!!!</h4>
        }
    </div>
}
else
{
    @if (User.IsInRole("Admin"))
    {
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-4">
                    <div class="text-center">
                        <span class="text-secondary text-center">Customer Actions</span>
                    </div>
                    <div class="border rounded">
                        <div class="text-center">
                            <div>
                                <a asp-action="AllCustomers" asp-controller="Customers" asp-area="Admin">All Customers</a>
                            </div>
                            <div>
                                <a asp-area="Admin" asp-controller="Customers" asp-action="Create">Create New Customer</a>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="text-center">
                        <span class="text-center">Cars Action</span>
                    </div>
                    <div class="border text-center">
                        <a asp-area="Admin" asp-controller="Cars" asp-action="Create">Create New Car</a>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="text-center">
                        <div >
                            <span class="text-secondary">Department</span>
                        </div>
                        <div class="border bg-AliceBlue">
                            <div>
                                <a asp-area="Employees"
                                   asp-controller="Departments"
                                   asp-action="CarsInDepartment"
                                   asp-route-id="fe109693-c5fe-46c4-ba1c-a42666c6a822">Body Repair</a>
                            </div>
                            <div>
                                <a asp-area="Employees"
                                   asp-controller="Departments"
                                   asp-action="CarsInDepartment"
                                   asp-route-id="3d56b8a7-c53f-477e-8bfd-fdd2c80eff36">Mechanical Repair</a>
                            </div>
                            <div>
                                <a asp-area="Employees"
                                   asp-controller="Departments"
                                   asp-action="CarsInDepartment"
                                   asp-route-id="bd91b3b7-ee4d-4ad1-b171-8919d43f6597">Painting</a>
                            </div>
                            <div>
                                <a asp-area="Employees"
                                   asp-controller="Departments"
                                   asp-action="CarsInDepartment"
                                   asp-route-id="add6595c-c3ee-4168-8bc2-a0832a4c536b">Parts</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="nav-link  mr-2" href="/Identity/Account/Logout">Logout</a>
    }
    else
    {
        <div class="jumbotron bg-eventures w-75 mx-auto font-weight-bold">
            <h1 class="text-center font-weight-bold">Welcome, @User.Identity.Name!</h1>
            <hr class="hr-2 bg-secondary" />
            <h2 class="text-center text-secondary">Garage Manager wishes you an exciting experience.</h2>
        </div>
    }
}
